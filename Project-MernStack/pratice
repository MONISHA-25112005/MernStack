  <script>
  const placeOrderButtons = document.querySelectorAll(".dish button");

  placeOrderButtons.forEach((btn) => {
    btn.addEventListener("click", () => {
      const dishCard = btn.closest(".dish");
      const dishName = dishCard.querySelector("h3").innerText;
      const priceText = dishCard.querySelector("p strong")?.nextSibling?.textContent || "0";
      const price = parseFloat(priceText.replace(/[^\d.]/g, '')) || 0;

      const orderItem = {
        name: dishName,
        price: price,
        quantity: 1
      };

      let cart = JSON.parse(localStorage.getItem("cart")) || [];

      const existingItem = cart.find(item => item.name === orderItem.name);
      if (existingItem) {
        existingItem.quantity += 1;
      } else {
        cart.push(orderItem);
      }

      localStorage.setItem("cart", JSON.stringify(cart));

      // Show popup
      const popup = document.getElementById("popup-message");
      popup.textContent = `${dishName} added to order!`;
      popup.style.display = "block";
      setTimeout(() => {
        popup.style.display = "none";
      }, 2000);
    });
  });
</script>


